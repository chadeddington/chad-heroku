<html>
  <%- include partials/global.ejs %>
  <body>
    <%- include partials/nav.ejs %>
  <style>
    h1.header {
      text-align: center;
      margin: 50px;
    }
    .cal-wrapper {
      display: grid;
      width: 100%;
      height: 86%;
      grid-template-columns: repeat(7, 1fr);
      grid-template-rows: repeat(6, 1fr);
    }
    .day {
      border: 1px solid white;
      background-color: lightgrey;
    }

    .day img {
      width: 100%;
    }

    .wrapper {
      max-width: 1200px;
      max-height: 1200px;
      width: 100vw;
      height: 100vw;
      margin: auto;
    }

    .date {
      position: relative;
      right: 5px;
      background-color: white;
      z-index: 2;
      padding: 0 5px;

    }

  </style>

  <h1 class='header'>
    Image Calendar
  </h1>
  <div class="wrapper">
    <div class="cal-wrapper">
    </div>
  </div>

  <script>
    var date = new Date();
    var months = ['January', 'February', 'March','April','May','June','July','August','September','October','November','Decembebr'];
    document.querySelector('.header').innerText = months[date.getMonth()];
    var cal = document.querySelector('.cal-wrapper');
    cal.innerHTML = '';
    for (var i = 0; i < 42; i++) {
      var day = document.createElement('div');

      if (i > 2 && i < 34) {
        day.setAttribute('class', 'day');
        var date = document.createElement('span');
        date.innerText = i - 2;
        date.setAttribute('class', 'date');
        var img = document.createElement('img');
        img.setAttribute('src', "http://lorempixel.com/200/200/city");
        day.appendChild(date);
        day.appendChild(img);
      }
      cal.appendChild(day);
    }
  </script>
</html>
